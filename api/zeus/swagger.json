  "paths": {
    "/roles": {
      "post": {
        "tags": [
          "Roles"
        ],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created"
          },
          "400": {
            "description": "Role already exists"
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "Get all roles",
        "description": "Get all roles",
        "responses": {
          "200": {
            "description": "List of roles successfully returned"
          }
        }
      }
    }
